@model List<Product>
@{

}
<div class="row">
    <div class="col-12">
        <table class="table-bordered">
            <thead>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Fiyat</th>
                    <th>Ürün Sayısı</th>
                    <th>Detay</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.UnitsInStock</td>
                    
                    <td>
                        <a class="btn-block" asp-controller="Product" asp-action="Detail" asp-route-id="@item.ProductId">
                            Detay
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>